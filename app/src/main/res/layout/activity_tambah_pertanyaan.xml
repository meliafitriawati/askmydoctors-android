<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tambah_pertanyaan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.askmydoctors.askmydoctors.views.TambahPertanyaan">
    <EditText
        android:id="@+id/tp_Judul"
        android:hint="Judul"
        android:textColorHint="#99000000"
        android:textSize="16dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:singleLine="true"
        android:background="@drawable/btm_line_shape"
        android:imeOptions="actionNext"/>

    <EditText
        android:layout_below="@id/tp_Judul"
        android:id="@+id/tp_Pertanyaan"
        android:hint="Pertanyaan"
        android:gravity="start"
        android:textColorHint="#99000000"
        android:textSize="16dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:singleLine="true"
        android:background="@drawable/btm_line_shape"
        android:imeOptions="actionNext"/>
    <Spinner
        android:layout_marginTop="10dp"
        android:id="@+id/spinner"
        android:layout_below="@id/tp_Pertanyaan"
        android:layout_width="150dp"
        android:layout_height="45dp"
        />
    <Button
        android:id="@+id/btnTambah"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="SUBMIT"
        android:layout_alignParentRight="true"
        android:textColor="@color/white"
        android:layout_below="@id/tp_Pertanyaan"
        android:background="@color/colorPrimary"
        />


</RelativeLayout>
