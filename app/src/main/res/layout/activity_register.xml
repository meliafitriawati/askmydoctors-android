<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.askmydoctors.askmydoctors.views.RegisterActivity">
    <LinearLayout
        android:background="@color/white"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.mikepenz.iconics.view.IconicsTextView
                android:id="@+id/lbl_username"
                android:text="{faw-user}"
                android:textColor="#99000000"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:textSize="18dp"
                android:gravity="center"
                android:background="@drawable/btm_line_shape"/>
            <EditText
                android:layout_toRightOf="@+id/lbl_username"
                android:id="@+id/usernamePengguna"
                android:hint="Username"
                android:textColorHint="#99000000"
                android:textSize="16dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:singleLine="true"
                android:background="@drawable/btm_line_shape"
                android:imeOptions="actionNext"/>

            <com.mikepenz.iconics.view.IconicsTextView
                android:id="@+id/lbl_nama"
                android:layout_below="@+id/lbl_username"
                android:text="{faw-user}"
                android:textColor="#99000000"
                android:background="@drawable/btm_line_shape"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:gravity="center"
                android:textSize="18dp"/>
            <EditText
                android:paddingLeft="7dp"
                android:layout_toRightOf="@+id/lbl_nama"
                android:layout_below="@id/usernamePengguna"
                android:id="@+id/namaPengguna"
                android:hint="Nama Lengkap"
                android:textColorHint="#99000000"
                android:textSize="16dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:fontFamily="sans-serif"
                android:background="@drawable/btm_line_shape"
                android:layout_marginBottom="10dp"/>

            <com.mikepenz.iconics.view.IconicsTextView
                android:id="@+id/lbl_emailPengguna"
                android:layout_below="@+id/lbl_nama"
                android:text="{faw-at}"
                android:textColor="#99000000"
                android:background="@drawable/btm_line_shape"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:gravity="center"
                android:textSize="18dp"/>
            <EditText

                android:paddingLeft="7dp"
                android:layout_toRightOf="@+id/lbl_emailPengguna"
                android:id="@+id/emailPenggunaDaftar"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColorHint="#99000000"
                android:textSize="16dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:fontFamily="sans-serif"
                android:background="@drawable/btm_line_shape"
                android:layout_marginBottom="10dp"
                android:layout_alignTop="@+id/lbl_emailPengguna" />

            <Spinner
                android:id="@+id/jenisKelaminSpinner"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/lbl_emailPengguna" />

            <com.mikepenz.iconics.view.IconicsTextView
                android:id="@+id/lbl_passwordPengguna"
                android:layout_below="@+id/jenisKelaminSpinner"
                android:text="{faw-unlock}"
                android:textColor="#99000000"
                android:background="@drawable/btm_line_shape"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:gravity="center"
                android:textSize="18dp"/>
            <EditText
                android:paddingLeft="7dp"
                android:layout_toRightOf="@+id/lbl_passwordPengguna"
                android:id="@+id/passwordPenggunaDaftar"
                android:hint="Password"
                android:textColorHint="#99000000"
                android:textSize="16dp"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:fontFamily="sans-serif"
                android:background="@drawable/btm_line_shape"
                android:layout_marginBottom="10dp"
                android:layout_alignTop="@+id/lbl_passwordPengguna" />

            <com.mikepenz.iconics.view.IconicsTextView
                android:id="@+id/lbl_cPassword"
                android:layout_below="@+id/lbl_passwordPengguna"
                android:text="{faw-unlock-alt}"
                android:textColor="#99000000"
                android:background="@drawable/btm_line_shape"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:gravity="center"
                android:textSize="18dp"/>
            <EditText
                android:paddingLeft="7dp"
                android:layout_toRightOf="@+id/lbl_cPassword"
                android:id="@+id/cPassword"
                android:hint="Confirm Password"
                android:textColorHint="#99000000"
                android:textSize="16dp"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:fontFamily="sans-serif"
                android:background="@drawable/btm_line_shape"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/lbl_passwordPengguna" />

            <Button
                android:id="@+id/btnRegister"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@id/cPassword"
                android:background="@drawable/button_shape"
                android:text="DAFTAR"
                android:textColor="@color/white"
                />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
