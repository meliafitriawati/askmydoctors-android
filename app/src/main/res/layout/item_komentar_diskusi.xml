<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:clickable="true"
    android:background="?android:attr/selectableItemBackground">

    <TextView
        android:id="@+id/ivNamaPengguna"
        android:textSize="16dp"
        android:textStyle="bold"
        android:text="MElia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/ivTanggalKirim"
        android:layout_below="@id/ivNamaPengguna"
        android:textSize="12sp"
        android:text="Jumat 4/4/2014"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/ivKomentarPertanyaan"
        android:textSize="14sp"
        android:layout_below="@id/ivTanggalKirim"
        android:textColor="@color/aluminum"
        android:text="dkadhaskldjaksdja sd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>